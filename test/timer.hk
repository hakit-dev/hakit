input1: sink
input2: sink
  widget=switch-push
input3: sink
input: or
  ninputs=3
  in0=$input1.out
  in1=$input2.out
  in2=$input3.out

pulse: timer-pulse
  delay=3000
  in=$input.out
pulse-output: source
  in=$pulse.out

on: timer-on
  delay=1000
  in=$input.out
on-output: source
  in=$on.out

off: timer-off
  delay=5000
  in=$input.out
off-output: source
  in=$off.out

meter: source
  widget=meter:min=0,low=20,high=80,max=100
  in=$slider.out
slider: sink local
  widget=slider:min=0,max=100,step=10
